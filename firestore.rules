rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.email == 'prathipweiyngya@gmail.com' ||
         request.auth.token.role == 'admin' ||
         exists(/databases/$(database)/documents/artifacts/nrkaneanproject/public/data/judges/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/artifacts/nrkaneanproject/public/data/judges/$(request.auth.uid)).data.role == 'admin');
    }

    // Helper function to check if user is judge or admin
    function isJudgeOrAdmin() {
      return request.auth != null && 
        (isAdmin() ||
         exists(/databases/$(database)/documents/artifacts/nrkaneanproject/public/data/judges/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/artifacts/nrkaneanproject/public/data/judges/$(request.auth.uid)).data.role in ['judge', 'admin']);
    }

    // Public read access for contest data
    match /artifacts/nrkaneanproject/public/data/contestants/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // App state control - admin only for write, authenticated users can read
    match /artifacts/nrkaneanproject/public/data/appState/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Aggregated scores - admin write, authenticated read
    match /artifacts/nrkaneanproject/public/data/aggregatedScores/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Judges collection - admin manage, self-read
    match /artifacts/nrkaneanproject/public/data/judges/{judgeId} {
      allow read: if request.auth != null && 
        (request.auth.uid == judgeId || isAdmin());
      allow write: if isAdmin() ||
        (request.auth.uid == judgeId && 
         request.auth.token.email == 'prathipweiyngya@gmail.com');
    }

    // User scores - judge write own, admin read all
    match /artifacts/nrkaneanproject/users/{userId}/scores/{document=**} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && 
        request.auth.uid == userId && isJudgeOrAdmin();
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}